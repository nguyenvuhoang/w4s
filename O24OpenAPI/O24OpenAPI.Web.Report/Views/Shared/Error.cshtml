@model O24OpenAPI.Web.Report.Models.Mvc.ErrorViewModel
@{
    ViewData["Title"] = "Error";

    string errorMessage = Model.Message ?? "An unexpected error occurred.";
    string errorTitle = "Oops! Something went wrong.";
    string errorIcon = "https://cdn-icons-png.flaticon.com/128/564/564619.png"; // Default icon
    string btnText = "🔄 Try Again";

    switch (Model.ErrorCode)
    {
        case 404:
            errorTitle = "Report Not Found";
            errorMessage = "The report you are looking for might have been removed or is temporarily unavailable.";
            errorIcon = "https://cdn-icons-png.flaticon.com/128/2748/2748558.png"; // 404 icon
            btnText = "🔄 Go Home";
            break;
        case 500:
            errorTitle = "Server Error";
            errorMessage = "Oops! Something went wrong on our server. Please try again later.";
            errorIcon = "https://cdn-icons-png.flaticon.com/128/564/564619.png"; // 500 icon
            break;
        case 401:
            errorTitle = "Unauthorized Access";
            errorMessage = "You do not have permission to access this resource.";
            errorIcon = "https://cdn-icons-png.flaticon.com/128/190/190406.png"; // 401 icon
            btnText = "🔑 Login Again";
            break;
        case 403:
            errorTitle = "Forbidden";
            errorMessage = "You do not have permission to access this resource.";
            errorIcon = "https://cdn-icons-png.flaticon.com/128/190/190406.png"; // 403 icon
            break;
        case 400:
            errorTitle = "Bad Request";
            errorMessage = "The request you sent to the server is invalid.";
            errorIcon = "https://cdn-icons-png.flaticon.com/128/190/190406.png"; // 400 icon
            break;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container error-container">
        <div class="error-box">
            <img src="@errorIcon" alt="Error Icon" class="error-icon mb-3">
            <h2 class="text-danger">@errorTitle</h2>

            <table class="error-table">
                <tr>
                    <th>Error Code</th>
                    <td>@Model.ErrorCode</td>
                </tr>
                <tr>
                    <th>Error Description</th>
                    <td>@errorMessage</td>
                </tr>
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <tr>
                        <th>Details</th>
                        <td class="error-detail">@Model.Message</td>
                    </tr>
                }
            </table>

            <div class="mt-5">
                @if (Model.ErrorCode == 401)
                {
                    <a href="/login" class="btn error-btn">@btnText</a>
                }
                else
                {
                    <a href="javascript:location.reload()" class="btn error-btn">@btnText</a>
                }
            </div>
        </div>
    </div>
</body>
</html>
